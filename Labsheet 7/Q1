// Write a C program to print all odd numbers from 1 to 100 using for loop.

#include<stdio.h>
int main(){

for(int i=1; i<=100; i++){
    if(i%2!=0){
    printf("%d",i);
    }
    printf("\n");
}


return 0;
}

// Modify above program using while loop

#include<stdio.h>
int main(){

 int i=1;
while(i<=100){
    if(i%2!=0){
    	printf("%d\n",i);
    }
    i++;
}


return 0;
}

// Modify above program using do while loop

#include<stdio.h>

int main(){
 
 int i=1;
 
   do{
      if(i%2!=0){
          printf("%d\n",i);
      }
	i++;
    }
    
    while(i<=100);
return 0;
}
