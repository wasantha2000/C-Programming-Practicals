//Write C programs to print following square star (*) patterns (Nested loop).


#include<stdio.h>
int main(){

for(int i=1; i<5; i++){
	for(int j=1; j<6; j++){
	printf("*");
	}
	printf("\n");                                  
}

return 0;
}

////////////////////////////////////////////////////////

#include<stdio.h>
int main(){

for(int i=0; i<7; i++){
	for(int j=0; j<i; j++){
	printf("*");	
	}
	printf("\n");
}

return 0;
}


//////////////////////////////////////////////////////


#include<stdio.h>
int main(){

for(int i=0; i<=5; i++){
	for(int j=5; j>i; j--){
	printf("*");
	}
	printf("\n");
}


return 0;
}

//////////////////////////////////////////////////////


#include<stdio.h>
int main(){

int row=5;
for(int i=1; i<=row; i++){
      for(int j=1; j<=row-i; j++){
      	printf(" ");
      }
      for(int k=0; k<i; k++ ){
        printf("* ");
      }
      printf("\n");
}

return 0;
}

//////////////////////////////////////////////////////

#include<stdio.h>
int main(){

int row=5;

for(int i=row; i>=1; i--){
	for(int j=1; j<=row-i; j++ ){
	printf(" ");
	}
	for(int k=1;k<=i; k++){
	printf("* ");
	}
	printf("\n");
}	

return 0;
}

/////////////////////////////////////////////////////

#include<stdio.h>
int main(){

int row=5;

for(int i=0; i<=row; i++){
	for(int j=1; j<=row-i; j++){
	printf(" ");
	}
	for(int k=1; k<=(2*i-1); k++){
	printf("*");
	}
	printf("\n");
}

return 0;
}

