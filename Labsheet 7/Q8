// Write a C program to find the maximum from a list of 10 user given numbers using for
   loop.

#include<stdio.h>
int main(){

int numbers[10];
int max;

printf("Enter 10 numbers:\n");
for(int i=0; i<10; i++){
	printf("Number %d :",i);
	scanf("%d",&numbers[i]);
}

max=numbers[0];

for(int i=1; i<10; i++){
	if(numbers[i]>max){
		max=numbers[i];
	}
}
printf("\nMax number is:%d",max);

return 0;
}

