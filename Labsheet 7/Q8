// Write a C program to find the maximum from a list of 10 user given numbers using for
   loop.

#include<stdio.h>
int main(){

int numbers[10];
int max;

printf("Enter 10 numbers:\n");
for(int i=0; i<10; i++){
	printf("Number %d :",i);
	scanf("%d",&numbers[i]);
}

max=numbers[0];

for(int i=1; i<10; i++){
	if(numbers[i]>max){
		max=numbers[i];
	}
}
printf("\nMax number is:%d",max);

return 0;
}

// Modify the above program using while

#include<stdio.h>
int main(){

int numbers[10];
int i=0,max;

printf("Enter 10 numbers\n");
while(i<10){
	printf("Enter number %d:",i+1);
	scanf("%d",&numbers[i]);
	i++;
}
max=numbers[0];
i=1;

while(i<10){
	if(numbers[i]>max){
		max=numbers[i];
	}
	i++;
}
printf("The maximum number is:%d\n",max);

return 0;
}


// Modify the above program using do while loop.

#include<stdio.h>
int main(){

int numbers[10];
int i=0,max;

printf("Enter 10 numbers:\n");
do{
	printf("Number %d:",i+1);
	scanf("%d",&numbers[i]);
	i++;
}
while(i<10);

max=numbers[0];
i=1;

do{
	if(numbers[i]>max){
		max=numbers[i];
	}
	i++;	
}

while(i<10);

printf("The maximum number is: %d\n",max);

return 0;
}


