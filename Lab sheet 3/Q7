#include<stdio.h>

int main(){
	const int inches_per_foot=12;
	
	int inches;
	float feet;
	
	printf("Enter value of inches:");
	scanf("%d",&inches);
	
	feet=(float)inches/inches_per_foot;
	
	printf("Foot: %f",feet);


return 0;
}

//////////////////////////////////////////////////////////

#include<stdio.h>
#define p 3.143

int main(){
	float r,Circumference;
	
	printf("Input radius:");
	scanf("%f",&r);
	
	Circumference=2*p*r;
	
	printf("Circumference: %f",Circumference);

return 0;
} 

/////////////////////////////////////////////////////////////

#include<stdio.h>

int main(){
	const int centimeters_per_meter=100;
	const int meters_per_kilometers =1000;
	double meter,centimeters,kilometers;

	printf("Input the value of meter:");
	scanf("%lf",&meter);
	
	centimeters=meter*centimeters_per_meter;
	kilometers=meter/meters_per_kilometers;
	
	printf("%lfm = %lfcm",meter,centimeters);
	printf("\n%lfm = %lfkm",meter,kilometers);
	



return 0;
}

