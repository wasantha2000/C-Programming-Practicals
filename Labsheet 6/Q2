#include<stdio.h>

int main(){

int num1,num2;

printf("Input first number:");
scanf("%d",&num1);
printf("Input second number:");
scanf("%d",&num2);

if(num1<num2){
	printf("Maximum number is %d",num2);
}
else{
	printf("Maximum number is %d",num1);
}


return 0;
}

////////////////////////////////////////////////////////////////

#include<stdio.h>

int main(){

int num1,num2,num3;

printf("Input first number:");
scanf("%d",&num1);
printf("Input second number:");
scanf("%d",&num2);
printf("Input third number:");
scanf("%d",&num3);

if(num1<num2){
	if(num2<num3){
		printf("Maximum number is %d",num3);
	}
	else{
		printf("Maximum number is %d",num2);
	}
}else{
	if(num1<num3){
		printf("Maximum number is %d",num3);
	}
	else
	{
		printf("Maximum number is %d",num1);
	}
}


return 0;
}

////////////////////////////////////////////////////////////////

