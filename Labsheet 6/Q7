#include<stdio.h>
int main(){
  char color;

  printf("\tColor Menu");
  printf("\n----------------------------------");
  printf("\nOrange");
  printf("\nBrown");
  printf("\nYellow");
  printf("\nGreen");
  
  printf("\n\nEnter the first letter of the cylinder color:");
  scanf("%c",&color);
  
  if(color=='o' || color=='O'){
  	printf("\nCylinder content: Ammonia");
  }else if(color=='B' || color=='b'){
  	printf("\nCylinder content: Carbon monoxide");
  }else if(color=='Y' || color=='y'){
  	printf("\nCylinder content: Hydrogen");
  }else if(color=='G' || color=='g'){
  	printf("\nCylinder content: Oxygen");
  }else{ 
  
  }
  
  printf("\n\nGlad to have the service");
	
return 0;
}

